<h1 class="text-center mt-4"> All Bloggers </h1>

<table class="table table-striped text-center mx-auto mt-5" style="max-width: 75%;">
    <thead class="thead-dark">
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Articles Published</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= link_to user.username, user , class:'nav-link ' %></td>
            <td><%= link_to user.email, user , class:'nav-link ' %></td>
            <td> <%= pluralize(user.articles.count, "article") %> </td>
            <td><%= link_to 'View profile', user, class: "btn btn-info" %></td>
            <% if logged_in? && (user == current_user || current_user.admin?) %>
                <td><%= link_to 'Edit profile', edit_user_path(user), class: "btn btn-warning" %></td> 
                <td><%= link_to 'Delete Account', user_path(user),class: 'btn btn-danger', method: :delete, data: {confirm: "Are You Sure?" } %></td>
            <%end%>   
        </tr>
        <% end %>
    </tbody>
</table>

<div class="text-center" style="margin-top:30px; margin-left: 10px;">
    <%= link_to 'Return Home', root_path, class: "btn btn-secondary" %>
</div>
